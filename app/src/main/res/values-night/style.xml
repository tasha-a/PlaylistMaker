<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:tint">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <!--    Main Activity-->

    <style name="main_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/padding_screen_hor</item>
        <item name="android:paddingVertical">@dimen/padding_screen_vert</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/black</item>
    </style>

    <!--   setting Activity-->

    <style name="setting_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/padding_screen_hor</item>
        <item name="android:paddingVertical">@dimen/padding_screen_vert</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="setting_button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="textSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="icon_settings">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingVertical">24dp</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:checked">true</item>
        <item name="android:thumbTint">@color/blue</item>
        <item name="android:trackTint">@color/blue</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="edit_text">
        <item name="android:minHeight">36dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search16</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="frameLayout_search">
        <item name="android:background">@drawable/fields_night</item>
    </style>

    <style name="icon_clear">
        <item name="android:tint">@color/black</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <!--    Track-->

    <style name="TrackNameStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArtistTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_artist_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ic_color">
        <item name="android:tint">@color/white</item>
    </style>

</resources>