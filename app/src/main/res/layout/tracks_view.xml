<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:maxHeight="60dp"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="12dp">

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="@dimen/ic_size_45"
        android:layout_height="@dimen/ic_size_45"
        tools:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="2dp">

        <TextView
            android:id="@+id/trackName"
            style="@style/TrackNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yesterday (Remastered 2009)Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trackArtist"
                style="@style/ArtistTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Beatles" />

            <ImageView
                style="@style/ic_color"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/point" />

            <TextView
                android:id="@+id/trackTime"
                style="@style/ArtistTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="4:01" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        style="@style/ic_color"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/arrow_forward" />

</LinearLayout>